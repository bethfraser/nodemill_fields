@example start_time: {type: "datetime", title: "Start Time & Date"}
--}}


<input type="date" class="form-control" style="display: inline-block; width: 40%" name="{{field}}.date" id="{{id}}" value="{{value.date}}" />
<input type="time" class="form-control" style="display: inline-block; width: 40%" name="{{field}}.time" value="{{value.time}}" />

